<!DOCTYPE html>
<html>
    <head>
	<title>Jobtest</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	<style>
	    
	/* Adding support for sticky footer */
	.site {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
	}

	.sticky-footer{
	flex: 1
	}
	
    </style>

    </head>

    <body>
	<div class="ui fluid container ">
	    <%= render 'dashboard/header' %>
	    <% if employer_signed_in? %>
		<div class="ui bottom attached segment pushable">
		    <div class="ui visible inverted left vertical sidebar menu">
			<a class="item">
			    <i class="home icon"></i>
			    Home
			</a>
			<a class="item">
			    <i class="block layout icon"></i>
			    Topics
			</a>
			<a class="item">
			    <i class="smile icon"></i>
			    Friends
			</a>
			<a class="item">
			    <i class="calendar icon"></i>
			    History
			</a>
			<div class="item">
			    <a href="dashboard/post"> Post </a>
			</div>
		    </div>
		    <div class="pusher">
			<div class="ui container">
			    <%= yield %>
			</div>
		    </div>
		</div>
		
	    <% end %> 	    
	</div>
	<script>
	 // Side navigation dashboard 
	 $('.ui.sidebar')
	     .sidebar('show')
	 ;

	 // message box flash messages 
	 $('.message .close')
	     .on('click', function() {
		 $(this)
		     .closest('.message')
		     .transition('fade')
		 ;
	     })
	 ;
	 
	</script>
	
    </body>
</html>



<div class="ui floating pointing labeled icon dropdown" >
    <% if !current_jobseeker.firstname.nil?  %>
	<%= (current_jobseeker.firstname + ' ' + current_jobseeker.lastname).titleize %>
    <% else %>
	<%= (current_jobseeker.fullname).titleize %>
    <% end %>
    <i class="angle down icon"></i>
    <div class="menu">
	<%= link_to 'Education ', educations_path , class: 'item' %>
	<%= link_to 'Work Experience', work_experiences_path, class: 'item' %>
	<%= link_to 'profile', edit_jobseeker_registration_path, class: 'item' %>
	<%= link_to 'logout', destroy_jobseeker_session_path, method: :delete, class: 'item'  %>
	
    </div>    
</div>

<script>
 $('.ui .dropdown')
     .dropdown({
	 direction: 'downward'
     })
 ;
</script>

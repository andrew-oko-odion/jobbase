<div class="ui stackable grid container "> 
    <div class="thirteen wide column">
	<div class="ui top attached borderless menu">
	    <div class="item">
	    </div>
	    <div class="item">
		<div class="ui disabled button"> Delete </div>
	    </div>
	    <a class="item">Features</a>
	    <a class="item">Testimonials</a>
	    <a class="item">Sign-in</a>
	</div>
	<div class="ui very padded attached raised segment">
	    <div class="ui divided items">    
		<% @cart.each do |job| %>
		    <div class="item">
			<div class="ui checkbox" style="padding-right: 3em">
			    <input type="checkbox" name="example">
			    <label></label>
			</div>
			<div class="content">
			    <%= link_to job.title.capitalize, jobcart_path(job.id), class: 'header', id: 'full_details' %> 			    <span class="meta" style="float:right; font-size: 0.9em">
			    <%= distance_of_time_in_words_to_now(job.created_at).gsub('about','') %> ago
			    <div class="ui basic label">
				<span class="ui green big header">N5000</span>
			    </div>
			    </span> 
			    <div class="meta">
				<span class="company-name"><%= job.company_name.capitalize %></span>
				<span class="Job location"> <i class="marker icon"></i><%= job.location.titleize %></span>
				<div class="ui tiny green header"> 150k - 300k </div>
			    </div>
			    <div class="description">
				<span class="meta"> Fulltime </span> <span class="meta"> 2 - 3 years experience </span>
			    </div>
			    <div class="extra">
			    </div>
			</div>
		    </div>
		<% end %>
	    </div>
	</div>

	<div style="float: right; margin-top: 2em" >
	    <%= paginate @cart %>
	</div>
    </div>
    <div class="three wide column">
	<div>
	    <div class="ui divider"> </div>
	    <div class="ui centered header"> No of Jobs:</div>
	    <div class="ui green centered header"> 3 </div>
	    <div class="ui divider"> </div>
	    <div class="ui centered header"> Total Amount : </div>
	    <div class="ui green centered header"> N30000 </div>
	    <div class="ui divider"> </div>
	    <div class="ui green button" > Make Payment</div>
	</div>
    </div>
    
    
</div>




<div class="ui text container">
    <div class="ui comments">
	<div class="comment">
	    <a class="avatar">
		<img src="/images/avatar/small/elliot.jpg">
	    </a>
	    <div class="content">
		<a class="author">Elliot Fu</a>
		<div class="metadata">
		    <span class="text"><%= @question.title %></span>
		    <span class="date">Yesterday at 12:30AM</span>
		</div>
		<div class="text">
		    <p>	<%= @question.body %> </p>
		    <div class="ui small labels">
			<% @question.tag.split(" ").each do |tag| %>
			    <div class="ui label">
				<%= tag %>
			    </div>
			<% end %>
		    </div>
		</div>
	    </div>
	    
	    <div class="comments">
		<% @questions_comments.each do |comment| %>
		    <div class="comment">
			<div class="text">
			    <p> <%= comment.body %></p>
			</div>
		    </div>
		    <div class="ui divider"></div>
		    <% end %>
	    </div>
	
	    
	    <div class="actions">
		<a class="reply">Comment</a>
	    </div>
	</div>
	<div class="comments">
	    <% @replies.each do |r| %>
		<div class="comment">
		    <a class="avatar">
			<img src="/images/avatar/small/jenny.jpg">
		    </a>
		    <div class="content">
			<a class="author">Jenny Hess</a>
			<div class="metadata">
			    <span class="date">Just now</span>
			</div>
			<div class="text">
			    <%= r.body %>
			</div>
			<div class="actions">
			    <a class="reply">Reply</a>
			</div>
		    </div>
		</div>
	    <% end %>
	</div>
    </div>
    <form class="ui reply form">
	<div class="field">
	    <textarea></textarea>
	</div>
	<div class="ui blue labeled submit icon button">
	    <i class="icon edit"></i> Add Reply
	</div>
    </form>
</div>
</div>



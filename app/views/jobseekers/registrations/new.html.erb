<div class="ui stackable grid container">
    <div class="three wide column">
    </div>
    <div class="ten wide column">
	<div class="ui text container">
	    <div class="ui very padded raised teal segment" style="border-radius: 0px;">
		<h2 class="ui blue center aligned header"> Sign up </h2>
		<div class="ui form">
		    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			
			<div class="required field">
			    <%= f.label :fullname %>
			    <div class="ui left icon input">
				<%= f.text_field :fullname, autocomplete: "on", placeholder: 'Firstname Lastname'%>
				<i class="violet user icon"></i>
			    </div>
			</div>
			
			<div class="required field">
			    <%= f.label :email %>
			    <div class="ui left icon input">
				<%= f.email_field :email,  autocomplete: "on", placeholder: 'email@example.com' %>
				<i class="violet mail icon"></i>
			    </div>
			</div>
			
			<div class="required field">
			    <%= f.label :password %>
			    <% if @minimum_password_length %>
				<%# @minimum_password_length %>
			    <% end %>
			    <div class="ui left icon input">
				<%= f.password_field :password, autocomplete: "off", placeholder: '*********' %>
				<i class="violet lock icon"></i>
			    </div>
			</div>

			<div class="required field">
			    <%= f.label :password_confirmation %>
			    <div class="ui left icon input">
				<%= f.password_field :password_confirmation, autocomplete: "off" %>
				<i class="violet lock icon"></i>
			    </div>
			</div>
			<div class="ui hidden divider"> </div>
			<div class="ui hidden divider"> </div>

			<div class="actions">
			    <center> 
				<%= f.submit "               Sign up              ", class: 'ui violet button' %>
			    </center>
			    <%= render "jobseekers/shared/links" %> 
			</div>

		    <% end %>
		</div>
	    </div>
	</div>
    </div>
    <div class="three wide column">
    </div>
</div>

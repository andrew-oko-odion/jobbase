<div class="ui stackable grid container">
    <div class="three wide column">
    </div>
    <div class="ten wide column">
	<div class="ui text container">
	  <div class="ui very padded raised teal segment" style="border-radius: 0px;">
		<h2 class="ui blue center aligned header"> Sign up </h2>
		<div class="ui form">
	    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		
		<div class="required field">
		    <%= f.label :fullname %>
		    <%= f.text_field :fullname, autocomplete: "on", placeholder: 'firstname lastname Example: John Smith'%>
		</div>
		
		<div class="required field">
		    <%= f.label :email %>
		    <%= f.email_field :email,  autocomplete: "on", placeholder: 'Example: johnosagie@gmail.com' %>
		</div>
		
		<div class="required field">
		    <%= f.label :password %>
		    <% if @minimum_password_length %>
			<%# @minimum_password_length %>
		    <% end %>
		    <%= f.password_field :password, autocomplete: "off", placeholder: '*********' %>
		</div>

		<div class="required field">
		    <%= f.label :password_confirmation %>
		    <%= f.password_field :password_confirmation, autocomplete: "off" %>
		</div>
		<div class="ui hidden divider"> </div>
		<div class="ui hidden divider"> </div>
		<center> 
		<div class="actions">
		    <%= f.submit "               Sign up              ", class: 'ui violet button' %>
		    <%= render "jobseekers/shared/links" %>
		</div>
		</center>
	    <% end %>
			    </div>
	    </div>
	</div>
    </div>
    <div class="three wide column">
    </div>
</div>

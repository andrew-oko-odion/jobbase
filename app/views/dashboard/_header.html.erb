<div class="ui stackable text menu">
    <div class="ui container">
	<%= link_to  image_tag("logo.png") ,  root_path, class: 'item' %>	
	<div class="right item">
	    <% if employer_signed_in? %>
		<%= link_to jobcarts_path, class: 'item' do  %>
		    <div class="ui floating orange circular label"><%= @cart_items.count %></div>
		    View Cart
		    <i class="big violet cart icon"></i>
		<% end %>
		<%= render 'dashboard/employer_dropdown', class: 'item' %>
	    <% else %>
		<%= link_to new_employer_session_path, class: 'item' do  %>
		    <i class="user icon"></i>
		    Login
		<% end %>
		<div class="item">
		    <%= link_to raw('<i class="unlock alternate icon"></i>') + "Sign up", new_employer_registration_path, class: "ui small violet button"%>
		</div>
	    <% end %>    
	</div>
    </div>
</div>

